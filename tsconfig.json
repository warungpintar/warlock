{
  "extends": "@warungpintar/warpin-scripts/config/tsconfig.json",
  "compilerOptions": {
    "strict": false,
    "jsx": "react",
    "noEmit": false,
    "lib": [
      "ESNext"
    ]
  },
  "typeRoots": [
    "./types",
    "./node_modules/@types"
  ],
  "include": [
    "src",
    "fixtures",
    "__tests__/**/*.spec.ts"
  ],
  "exclude": [
    "node_modules",
    "typings"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "resolveJsonModule": true,
      "noImplicitAny": false,
      "jsx": "react",
      "target": "es5"
    }
  }
}
